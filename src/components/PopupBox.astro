{/* Popup box container with initial hidden state */}
<div
	id="popupBox"
	class="absolute p-4 transition-all ease-in-out translate-y-full bottom-[-100%] bg-white rounded-lg right-4 shadow-lg border border-gray-200 min-w-[200px]"
>
	<h3 id="popupTitle" class="mb-2 font-semibold text-gray-800"></h3>
	<p id="popupContent" class="text-sm text-gray-600"></p>
	<img
		id="popupImage"
		class="w-full max-w-[300px] max-h-[300px] rounded-lg hidden"
	/>
</div>
