{/* Popup box container with initial hidden state */}
<div
	id="popupBox"
	role="dialog"
	aria-label="Feature Information"
	aria-modal="true"
	aria-hidden="true"
	class="absolute p-4 transition-all ease-in-out transform translate-y-8 opacity-0 invisible bottom-2 right-2 bg-white rounded-lg shadow-lg border border-gray-200 max-w-[400px]"
>
	<div id="popupContent" role="document"></div>
	<img
		id="popupImage"
		class="w-full h-auto rounded-lg max-w-72 max-h-72 hidden mt-3 object-cover"
		alt=""
		aria-hidden="true"
	/>
</div>
